{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@apps/*": ["apps/*"],
      "@layers/*": ["layers/*"]
    }
  },
  "include": [
    "apps/**/*",
    "layers/**/*",
    "shared/**/*",
    "vitest.config.ts",
    "eslint.config.mjs"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/.nuxt/**",
    "**/.output/**",
    "**/dist/**"
  ]
}
